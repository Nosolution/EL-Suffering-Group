<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.el_project.AddTaskActivity">

    <EditText
        android:id="@+id/input_taskname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/inputtask"/>

    <EditText
        android:id="@+id/input_assumed_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/inputassumedtime"
        />

    <EditText
        android:id="@+id/input_deadline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/inputdeadline"
        />

    <EditText
        android:id="@+id/input_priority"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/inputpriority"/>

    <Button
        android:id="@+id/add_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finish"/>

</LinearLayout>

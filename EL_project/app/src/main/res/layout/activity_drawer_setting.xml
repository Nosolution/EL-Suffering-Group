<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".DrawerSettingActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<android.support.v7.widget.Toolbar
			android:id="@+id/setting_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

		<!--<Button-->
			<!--android:layout_width="wrap_content"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:text="123"/>-->
	</LinearLayout>

	<!--右侧布局-->
	<RelativeLayout
		android:id="@+id/left_drawer"
		android:layout_width="230dp"
		android:layout_height="match_parent"
		android:layout_gravity="end"
		android:background="#FFF">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<RelativeLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:padding="10dp"
				android:background="?attr/colorPrimary">

				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/icon_image"
					android:layout_width="70dp"
					android:layout_height="70dp"
					android:src="@drawable/set_white"
					android:layout_centerInParent="true"/>
			</RelativeLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<ImageView
						android:id="@+id/img_if_music_on"
						android:layout_width="18dp"
						android:layout_height="18dp"
						android:layout_margin="4dp"
						android:scaleType="center"
						android:background="@drawable/music_slight_big" />

					<TextView
						android:id="@+id/text_if_music_on"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="30dp"
						android:scaleType="center"
						android:text="@string/string_if_music_on"
						android:textSize="18sp"/>

					<Switch
						android:id="@+id/switch_if_music_on"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentEnd="true" />
				</RelativeLayout>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<ImageView
						android:id="@+id/img_if_tomato_clock_on"
						android:layout_width="18dp"
						android:layout_height="18dp"
						android:layout_margin="4dp"
						android:scaleType="center"
						android:background="@drawable/clock"/>

					<TextView
						android:id="@+id/text_if_tomato_clock_on"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="30dp"
						android:text="@string/string_if_tomato_clock_on"
						android:textSize="18sp"/>

					<Switch
						android:id="@+id/switch_if_tomato_clock_on"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentEnd="true" />
				</RelativeLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:orientation="horizontal">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:id="@+id/text_clock_on"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="30dp"
						android:text="@string/string_tomato_clock_on"
						android:textSize="18sp"
						android:visibility="gone"/>

					<TextView
						android:id="@+id/text_chosen_time"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerHorizontal="true"
						android:visibility="gone"/>

					<Spinner
						android:id="@+id/spinner_choose_time"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_alignParentEnd="true"
						android:visibility="gone"></Spinner>


				</RelativeLayout>
			</LinearLayout>


		</LinearLayout>
	</RelativeLayout>

</android.support.v4.widget.DrawerLayout>